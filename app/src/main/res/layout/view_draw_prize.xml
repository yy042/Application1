<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_btn_white"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赠送翻牌机会 1 次"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计剩余3次"
            android:textColor="#999999"
            android:textSize="13sp"
            android:layout_marginLeft="12dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_change"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换一换"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginLeft="3dp"
            />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginTop="9dp">

        <ImageView
            android:id="@+id/main_card_result"
            android:layout_width="97dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_flip_card"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <LinearLayout
            android:id="@+id/main_card1"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingVertical="5dp"
            android:background="@drawable/ic_flip_card"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/main_card2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvCongrats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜您!"
                android:textColor="#bb6f42"
                android:textSize="8sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#bb6f42"
                    android:textSize="6sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_prize_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff5a59"
                    android:textSize="6sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#bb6f42"
                    android:textSize="6sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_coupon"
                android:layout_width="71dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"/>

            <TextView
                android:id="@+id/btn_card_use"
                android:layout_width="56dp"
                android:layout_height="13dp"
                android:gravity="center"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="5sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#999999"
                android:textSize="4sp"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/main_card2"
            android:layout_width="97dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_flip_card"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toRightOf="@id/main_card1"
            app:layout_constraintRight_toLeftOf="@id/main_card3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/main_card3"
            android:layout_width="97dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_flip_card"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toRightOf="@id/main_card2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>